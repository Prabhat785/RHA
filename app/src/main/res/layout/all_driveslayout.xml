<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="@drawable/border"
        android:layout_marginBottom="4dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginTop="10dp">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="1dp"
            android:padding="5dp"
            android:orientation="horizontal">
            <com.mikhaellopez.circularimageview.CircularImageView
                android:id="@+id/profile_image"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:src="@drawable/profile"
                android:scaleType="centerCrop"
                android:layout_marginLeft="4dp"/>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">
                <TextView
                    android:id="@+id/user_name"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Username"
                    android:layout_marginLeft="5dp"
                    android:layout_marginTop="8dp"
                    android:textAlignment="textStart"
                    android:textSize="16dp"
                    android:textColor="#161717"
                    android:textStyle="bold"/>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginLeft="5dp"
                    android:padding="2dp">
                    <TextView
                        android:id="@+id/text"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="has Started a Drive"
                        android:textColor="#101010"
                        android:textStyle="bold"
                        android:textSize="14sp"/>
                    <TextView
                        android:id="@+id/drive_date"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Date "
                        android:textColor="#090909"
                        android:textSize="14sp"/>
                    <TextView
                        android:id="@+id/drive_time"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Time "
                        android:textColor="#090909"
                        android:textSize="14sp"/>

                </LinearLayout>

        </LinearLayout>

    </LinearLayout>
        <TextView
            android:id="@+id/picuploc"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Pickup location"
            android:layout_marginLeft="3dp"
            android:textStyle="bold"
            android:layout_marginRight="3dp"
            android:padding="14sp"
            android:textColor="#1A1B1B"/>

        <TextView
            android:id="@+id/driveloc"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Drive location"
            android:textStyle="bold"
            android:layout_marginLeft="3dp"
            android:layout_marginRight="3dp"
            android:padding="14sp"
            android:textColor="#0E0E0E"/>


        <TextView
            android:id="@+id/sponsor"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textStyle="bold"
            android:text="Sponsors"
            android:layout_marginLeft="3dp"
            android:layout_marginRight="3dp"
            android:padding="14sp"
            android:textColor="#090909"/>
        <TextView
            android:id="@+id/memrequred"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Members Required"
            android:textStyle="bold"
            android:layout_marginLeft="3dp"
            android:layout_marginRight="3dp"
            android:padding="14sp"
            android:textColor="#232727"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:orientation="horizontal">

            <Button
                android:id="@+id/join"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:hint="Join Drive"
                android:textStyle="bold"
                android:textSize="10sp"
                 />
        <TextView
            android:id="@+id/memreq"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="15dp"
            android:text="Memebers Joined 0"
            android:textColor="#1A1B1A"
            android:textStyle="bold" />
        </LinearLayout>
        <TextView
            android:id="@+id/drivestatus"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="This Drive has been started sucessfulluy"
            android:textStyle="bold"
            android:textColor="#0D0E0E"
            android:textSize="15dp"
            android:background="#95D84F"
            android:padding="4dp"
            android:layout_marginLeft="4dp"
            android:layout_marginRight="4dp"
            android:layout_marginBottom="4dp"
            android:visibility="invisible"/>
        <TextView
            android:id="@+id/drivestatus2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="This Drive has been ended"
            android:textStyle="bold"
            android:textColor="#0D0E0E"
            android:textSize="15dp"
            android:background="#FF0000"
            android:padding="4dp"
            android:layout_marginLeft="4dp"
            android:layout_marginRight="4dp"
            android:layout_marginBottom="4dp"
            android:visibility="invisible"/>

    </LinearLayout>

</RelativeLayout>